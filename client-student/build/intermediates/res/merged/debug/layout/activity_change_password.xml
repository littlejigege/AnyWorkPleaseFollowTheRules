<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_change_info"
    tools:context="com.qgstudio.anywork.user.ChangePasswordActivity">


    <EditText
        android:id="@+id/editText_old"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:background="@null"
        android:textColor="#2F2F2F"
        android:translationZ="3dp"
        android:textCursorDrawable="@drawable/my_cursor"
        app:layout_constraintBottom_toBottomOf="@+id/textview_old"
        app:layout_constraintLeft_toLeftOf="@+id/textview_old"
        app:layout_constraintTop_toTopOf="@+id/textview_old" />

    <TextView
        android:id="@+id/textview_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="原始密码"
        android:textColor="#4f6be5"
        android:textSize="14sp"
        android:translationZ="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_mail"
        app:layout_constraintStart_toStartOf="@+id/button_save" />

    <TextView
        android:id="@+id/textview_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="重置密码"
        android:textColor="#4f6be5"
        android:textSize="14sp"
        android:translationZ="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_phone"
        app:layout_constraintStart_toStartOf="@+id/button_save" />

    <ImageView
        android:id="@+id/image_cancel"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_cancel" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="312dp"
        android:layout_height="264dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button_save"
        android:layout_width="252dp"
        android:layout_height="30dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_button_notice"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textview_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="确认密码"
        android:textColor="#4f6be5"
        android:textSize="14sp"
        android:translationZ="2dp"
        app:layout_constraintBottom_toTopOf="@+id/button_save"
        app:layout_constraintStart_toStartOf="@+id/button_save" />

    <View
        android:id="@+id/line3"
        android:layout_width="252dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#4f6be5"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="@+id/button_save"
        app:layout_constraintTop_toBottomOf="@+id/textview_old"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/line1"
        android:layout_width="252dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#4f6be5"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="@+id/button_save"
        app:layout_constraintTop_toBottomOf="@+id/textview_mail"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/line2"
        android:layout_width="252dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#4f6be5"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="@+id/button_save"
        app:layout_constraintTop_toBottomOf="@+id/textview_phone"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_new"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:textCursorDrawable="@drawable/my_cursor"
        android:background="@null"
        android:textColor="#2F2F2F"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_mail"
        app:layout_constraintLeft_toLeftOf="@+id/textview_mail"
        app:layout_constraintTop_toTopOf="@+id/textview_mail" />

    <EditText
        android:id="@+id/editText_again"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:background="@null"
        android:textColor="#2F2F2F"
        android:translationZ="2dp"
        android:textCursorDrawable="@drawable/my_cursor"
        app:layout_constraintBottom_toBottomOf="@+id/textview_phone"
        app:layout_constraintLeft_toLeftOf="@+id/textview_phone"
        app:layout_constraintTop_toTopOf="@+id/textview_phone" />



    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textColor="#2f2f2f"
        android:textSize="20sp"
        android:translationZ="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_old"
        app:layout_constraintLeft_toLeftOf="@id/textView_id"
        app:layout_constraintRight_toRightOf="@id/textView_id"
        app:layout_constraintStart_toStartOf="@+id/button_save"
        android:layout_marginBottom="24dp" />


</android.support.constraint.ConstraintLayout>
