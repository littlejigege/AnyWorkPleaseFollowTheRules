<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_grey_status</item>
        <item name="colorPrimaryDark">@color/dark_grey_toolbar</item>
        <item name="colorAccent">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AnyWork.Theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@color/light_grey</item>
    </style>

    <style name="AnyWork.Theme.TextView1" parent="Base.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="AnyWork.Theme.TextView2" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AnyWork.Theme.EditText1" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AnyWork.Theme.EditText.Theme</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/AnyWork_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="AnyWork.Theme.EditText.Theme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/sample_blue</item>
    </style>

    <style name="AnyWork.Theme.EditText2" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:theme">@style/AnyWork.Theme.EditText.Theme</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <!--<item name="android:layout_marginTop">3dp</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="AnyWork.Theme.TextView3" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AnyWork.Theme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AnyWork.Theme.Button.Dialog" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="loading_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="WelcomeStyle" parent="AnyWork.Theme">
        <item name="android:windowBackground">@drawable/bg_welcome</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AnyWork.Theme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnyWork.Theme.Text.Body" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_textView</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AnyWork.Theme.EditText.Body" parent="AnyWork.Theme.Text.Body">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="AnyWork.Theme.Icon">
        <!--<item name="android:layout_margin">10dp</item>-->
    </style>

    <style name="AnyWork.Theme.Icon.Big">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="AnyWork.Theme.Icon.Medium">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="AnyWork.Theme.Icon.Medium.Scaled" parent="AnyWork.Theme.Icon.Medium">
        <item name="android:alpha">0</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="AnyWork.Theme.Icon.Small">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>


    <style name="AnyWork.Theme.Button.Scaled" parent="AnyWork.Theme.Button">
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
    </style>

</resources>
