<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_people"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/scrollView2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_item_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="古天乐"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:ellipsize="end"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView10" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:src="@drawable/icon_clock"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/tv_name_item_notice"
            app:layout_constraintTop_toTopOf="@+id/imageView10" />

        <TextView
            android:id="@+id/tv_time_item_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="2018-09-11 19:00"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:ellipsize="end"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="@+id/scrollView2"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" />

    <ScrollView
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_item_notice"
        android:id="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/tv_content_item_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="第一章练习已发布，请同学们及时完成！完成时间：09.11.19:00 - 09.11.19:00完成时间：09.11.19:00 - 09.11.19:00完成时间：09.11.19:00 - 09.11.19:00完成时间：09.11.19:00 - 09.11.19:00"
            android:textSize="12sp"
            android:textColor="#ffffff"/>

    </ScrollView>

</android.support.constraint.ConstraintLayout>


