<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_paper_item">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_paper"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_paper_default"
        android:layout_marginStart="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_circle_line"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_paper_title"
        android:id="@+id/imageView"
        android:layout_marginStart="25dp"
        android:layout_above="@+id/civ_paper"
        android:layout_toEndOf="@+id/civ_paper" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_paper_chapter"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_paper_type"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_paper_date"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="标题："
        android:layout_toEndOf="@id/imageView"
        android:layout_alignTop="@id/imageView"
        android:layout_marginStart="10dp"
        android:textSize="20dp"
        android:textColor="@color/dark_grey_text"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:text="章节："
        android:textSize="15dp"
        android:layout_toEndOf="@id/imageView2"
        android:layout_alignTop="@id/imageView2"
        android:layout_marginStart="10dp"
        android:textColor="@color/dark_purple_text"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:text="性质："
        android:textSize="15dp"
        android:layout_toEndOf="@id/imageView3"
        android:layout_alignTop="@id/imageView3"
        android:layout_marginStart="10dp"
        android:textColor="@color/dark_purple_text"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:text="时间："
        android:textSize="15dp"
        android:layout_toEndOf="@id/imageView4"
        android:layout_alignTop="@id/imageView4"
        android:layout_marginStart="10dp"
        android:textColor="@color/dark_purple_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        tools:text="数组"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:textColor="@color/dark_grey_text"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        tools:text="第五章"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="@color/dark_purple_text"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        tools:text="练习题"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/textView8"
        android:textColor="@color/dark_purple_text"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        tools:text="7.8 ~ 7.9"
        android:textSize="15dp"
        android:layout_toEndOf="@id/textView4"
        android:layout_alignTop="@id/textView4"
        android:textColor="@color/dark_purple_text" />

</RelativeLayout>

